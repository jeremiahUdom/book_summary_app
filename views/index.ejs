<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/main.css">
  <title>Book Summary App</title>
</head>
<body>
  <%- include("partials/header.ejs") -%>
  <main class="home page">
    <h1 class="title">My Book Summaries</h1>
    <div class="container">
      <% if (summaries.length !== 0){ %>
        <% summaries.forEach(summary => { %>
          <div class="item">
            <div class="book">
              <img src="https://covers.openlibrary.org/b/isbn/<%= summary.book_isbn%>-M.jpg" class="book-cover" />
              <div class="book-info">
                <p class="book-title"> <%= summary.book_title %> </p>
                <p class="book-author">by <%= summary.book_author %></p>
                <p class="date-read">Date Read: <%= summary.date_read.toLocaleDateString() %></p>
                <div class="star-ratings">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <% if(i <= summary.rating) { %>
                      <img src="/assets/icons/star-filled.png" class="star-img" />
                    <% } else { %>
                      <img src="/assets/icons/star-gray.png" class="star-img" />
                    <% } %>
                  <% } %>
                  <span><%= summary.rating %>/5</span>
                </div>
              </div>
            </div>
            <p class="note-preview">
              <%= summary.summary %>
            </p>
            <a class="custom-link" href="/summary/<%= summary.id %>">
              View Summary
            </a>
          </div>
        <% }) %>
      <% } else { %>
        <div class="empty-state">
          <img src="/assets/icons/box.png" alt="No summaries" class="empty-icon" />
          <h2 class="empty-state-header">No summaries yet</h2>
          <p class="empty-state-text">Add your first book summary to get started!</p>
        </div>
      <% } %>
    </div>
  </main>
  
  <%- include("partials/footer.ejs"); -%>
  <script src="/js/app.js"></script>
</body>
</html>